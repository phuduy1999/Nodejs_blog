<div class="mt-4">
  <h3>Edit course</h3>
  <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">

    <div class="form-group">
      <label for="name">Ten KH</label>
      <input type="text" class="form-control" value="{{course.name}}" id="name" placeholder="Enter " name="name" />
    </div>

    <div class="form-group">
      <label for="description">Mo ta</label>
      <textarea class="form-control" id="description" placeholder="Enter "
        name="description">{{course.description}}</textarea>
    </div>

    <div class="form-group">
      <label for="videoId">Video id</label>
      <input type="text" class="form-control" value="{{course.videoId}}" id="videoId" placeholder="Enter "
        name="videoId" />
    </div>

    <div class="form-group">
      <label for="level">Trinh do</label>
      <input type="text" class="form-control" value="{{course.level}}" id="level" placeholder="Enter " name="level" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>