<div class="mt-4">
  <h3>Create course</h3>
  <form method="POST" action="/courses/store">

    <div class="form-group">
      <label for="name">Ten KH</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Enter "
        name="name"
      />
    </div>

    <div class="form-group">
      <label for="description">Mo ta</label>
      <textarea
        class="form-control"
        id="description"
        placeholder="Enter "
        name="description"
      ></textarea>
    </div>

    <div class="form-group">
      <label for="videoId">Video id</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        placeholder="Enter "
        name="videoId"
      />
    </div>

    <div class="form-group">
      <label for="level">Trinh do</label>
      <input
        type="text"
        class="form-control"
        id="level"
        placeholder="Enter "
        name="level"
      />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>